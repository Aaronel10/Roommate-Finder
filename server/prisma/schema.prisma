generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       String      @id @default(uuid())
  email         String
  hash_password String
  is_active     Boolean
  is_superuser  Boolean
  is_verified   Boolean
  image         String
  gender        String
  first_name    String
  last_name     String
  birthday      DateTime
  phone_number  Int
  zip_code      Int
  city          String
  state         String
  reset_id      Int
  reset_exp     DateTime
  update_id     Int
  update_exp    DateTime
  activate_id   Int
  activate_exp  DateTime
  is_setup      Boolean
  setup_step    String
}

model User_Response {
  response_id String 
  user_id String @id @default(uuid())
  option_id String
  option_response_text String
  option_response_bool Boolean
  option_response_int Int
  question_response_type String
  question_id String
  question_text Int
}

model Question {
  question_id         String     @id @default(uuid())
  question_text       String
  response_type       String
  question_text_short String
  is_filter           Boolean
}

model Response {
  option_id String @id @default(uuid())
  question_id String
  response String
  response_bool Boolean
  response_integer Int
  response_type String
}

model Interests_Activity {
  option_id String @id @default(uuid())
  option_text String
  type String
}

model User_Interests_Activity {
  user_id String @id @default(uuid())
  option_id String
  option_text String
  type String
}